{
  "name": "Rabbity Timer",
  "description": "Shows presentation timer on the slide",
  "version": "1.0",
  "permissions": [
    "activeTab", "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
      "default_title": "Start Timer",
      "default_icon": "images/cat.png",
      "default_popup": "start_timer.html"
  },
  "content_scripts": [
    {
      "matches": ["*://qiita.com/*", "*://*.esa.io/*"],
      "css": ["style.css"],
      "js": ["timer.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "manifest_version": 2
}
